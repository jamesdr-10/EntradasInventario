@page "/Productos/Create"
@rendermode InteractiveServer

@inject ProductosService productosService
@inject NavigationManager navigationManager

<PageTitle>Crear Producto</PageTitle>

<EditForm Model="producto" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h5 class="card-title">Crear Producto</h5>
            </div>

            <div class="card-body">
                <div class="mb-3">
                    <label class="col-form-label fw-bold">Descripción</label>
                    <InputText class="form-control" @bind-Value="producto.Descripcion" placeholder="Ingrese la descripción" />
                    <ValidationMessage For="(() => producto.Descripcion)"/>
                </div>

                <div class="mb-3">
                    <label class="col-form-label fw-bold">Costo</label>
                    <InputNumber class="form-control" @bind-Value="producto.Costo" />
                    <ValidationMessage For="(() => producto.Costo)"/>
                </div>

                <div class="mb-3">
                    <label class="col-form-label fw-bold">Precio</label>
                    <InputNumber class="form-control" @bind-Value="producto.Precio" />
                    <ValidationMessage For="(() => producto.Precio)"/>
                </div>

                <div class="mb-3">
                    <label class="col-form-label fw-bold">Existencia</label>
                    <InputNumber class="form-control" @bind-Value="producto.Existencia" disabled readonly />
                </div>

                @if (!string.IsNullOrEmpty(errorMensaje)) 
                {
                    <div class="alert alert-danger mt-3">@errorMensaje</div>
                }
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-center gap-2">
                    <a href="/Productos/Index" class="btn btn-secondary">
                        <span class="bi bi-arrow-left"></span> Volver
                    </a>

                    <button type="submit" class="btn btn-success">
                        <span class="bi bi-floppy"></span> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>

</EditForm>

@code {
    private Productos producto = new();
    private string? errorMensaje;

    private async Task Guardar()
    {
        errorMensaje = null;

        if (await productosService.Guardar(producto)) 
        {
            navigationManager.NavigateTo("/Productos/Index");
        } else 
        {
            errorMensaje = "No se pudo guardar el producto. Intente nuevamente.";
        }
    }
}
